<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_header_height"
        android:background="@color/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/padding_space_end"
            android:textAppearance="@style/ToolbarTitleText"
            tools:text="Recipe"/>
    </LinearLayout>

    <ListView
        android:id="@+id/widget_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- empty list -->
    <ImageView
        android:id="@+id/empty_widget_view"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_cake_white_24dp"
        android:contentDescription="@string/appwidget_text"/>

</LinearLayout>